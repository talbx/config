{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "groupName": "all dependencies",
    "groupSlug": "all",
    "lockFileMaintenance": {
        "enabled": true
    },
    "assignees": ["talbx"],
    "packageRules": [
        {
            "groupName": "all dependencies",
            "groupSlug": "all",
            "matchPackagePatterns": [
                "*"
            ]
        }
    ],
    "separateMajorMinor": true
}